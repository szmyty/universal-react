{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",

        "outDir": "./dist-node",
        "declaration": true,
        "emitDeclarationOnly": true,
        "noEmit": false,

        "types": ["node", "vite/client", "vitest/globals"]
    },
    "include": ["vite.config.ts", "vitest.config.ts"]
}
